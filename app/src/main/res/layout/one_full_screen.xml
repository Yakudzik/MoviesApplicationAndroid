<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneFullScreen">

    <ImageView
        android:id="@+id/poster"
        android:layout_width="wrap_content"
        android:layout_height="240dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/test_movie_cover_img" />

    <TextView
        android:id="@+id/nazvanie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Название"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/poster"
        android:textSize="25sp"
        android:maxLines="1"
        android:textColor="@color/purple_500"
        android:layout_margin="10dp"/>
    <TextView
        android:id="@+id/data_sozdania"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Дата создания"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/nazvanie"
        android:textSize="20sp"
        android:maxLines="1"
        android:textColor="@color/purple_500"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/janre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Жанр"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/data_sozdania"
         android:textSize="20sp"
        android:maxLines="1"
        android:textColor="@color/purple_500"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"/>
    <TextView
        android:id="@+id/yaziki"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Доступные языки"
        android:layout_centerHorizontal="false"
        android:layout_below="@id/janre"
        android:textSize="20sp"
        android:maxLines="1"
        android:textColor="@color/purple_500"
        android:layout_margin="10dp"
        android:layout_marginStart="10dp"/>
</RelativeLayout>